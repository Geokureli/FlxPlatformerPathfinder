{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "release: html",
			"command": "haxelib",
			"args": ["run", "lime", "build", "html5", "-Djs-source-map"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"],
			"group": "build"
		},
		{
			"label": "release: html -clean",
			"command": "haxelib",
			"args": ["run", "lime", "build", "html5", "-Djs-source-map", "-clean"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"],
			"group": "build"
		},
		{
			"label": "debug: html",
			"command": "haxelib",
			"args": ["run", "lime", "build", "html5", "-debug"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"],
			"group": "build"
		},
		{
			"label": "release: mac",
			"command": "haxelib",
			"args": ["run", "lime", "build", "mac"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"],
			"group": "build"
		},
		{
			"label": "debug: mac",
			"command": "haxelib",
			"args": ["run", "lime", "build", "mac", "-debug"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"],
			"group": "build"
		},
		{
			"label": "debug: flash",
			"command": "haxelib",
			"args": ["run", "lime", "build", "flash", "-debug"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"],
			"group": "build"
		}
	]
}
